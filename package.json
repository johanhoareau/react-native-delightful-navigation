{
    "name": "react-native-delightful-navigation",
    "version": "0.2.1",
    "description": "A library to create smooth and delightful animated transitions between screen",
    "main": "./lib/module/index.js",
    "types": "./lib/typescript/src/index.d.ts",
    "exports": {
        ".": {
            "source": "./src/index.tsx",
            "types": "./lib/typescript/src/index.d.ts",
            "default": "./lib/module/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "react-native.config.js",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "example": "yarn workspace react-native-delightful-navigation-example",
        "test": "jest",
        "typecheck": "tsc",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "release": "release-it --only-version",
        "verify-headers": "node scripts/verify-headers.js"
    },
    "keywords": [
        "react-native",
        "ios",
        "android",
        "shared-element-transition",
        "shared-element",
        "delightful-navigation",
        "react-native-delightful-navigation",
        "navigation",
        "react-navigation",
        "expo",
        "expo-router",
        "screen-transition",
        "transitions-between-screens",
        "transitions",
        "navigation-transition"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/johanhoareau/react-native-delightful-navigation.git"
    },
    "author": "johan hoareau <hoareaujohan.reactdev@gmail.com> (https://github.com/johanhoareau)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/johanhoareau/react-native-delightful-navigation/issues"
    },
    "homepage": "https://github.com/johanhoareau/react-native-delightful-navigation#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.27.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@eslint/compat": "^1.2.7",
        "@eslint/eslintrc": "^3.3.0",
        "@eslint/js": "^9.22.0",
        "@evilmartians/lefthook": "^1.5.0",
        "@react-native/babel-preset": "0.78.2",
        "@react-native/eslint-config": "^0.78.0",
        "@react-navigation/native": "^7.1.6",
        "@react-navigation/native-stack": "^7.3.10",
        "@release-it/conventional-changelog": "^9.0.2",
        "@types/jest": "^29.5.5",
        "@types/react": "^19.0.12",
        "@typescript-eslint/eslint-plugin": "^8.39.1",
        "@typescript-eslint/parser": "^8.39.1",
        "commitlint": "^19.6.1",
        "del-cli": "^5.1.0",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-jest": "latest",
        "eslint-plugin-license-header": "^0.8.0",
        "eslint-plugin-prettier": "^5.2.3",
        "expo-router": "~5.0.7",
        "jest": "^29.7.0",
        "license-checker": "^25.0.1",
        "minimatch": "^10.0.3",
        "prettier": "^3.0.3",
        "react-native": "0.79.2",
        "react-native-builder-bob": "^0.40.8",
        "react-native-reanimated": "3.17.5",
        "release-it": "^17.10.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "immer": "^10.1.1",
        "zustand": "^4.5.7"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*",
        "react-native-reanimated": "^3.16.1"
    },
    "workspaces": [
        "example"
    ],
    "packageManager": "yarn@3.6.1",
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "requireBranch": "master",
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "hooks": {
            "before:init": [
                "yarn verify-headers",
                "yarn typecheck",
                "yarn lint",
                "yarn test"
            ]
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": {
                    "name": "angular"
                }
            }
        }
    },
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "module",
                {
                    "esm": true
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "create-react-native-library": {
        "languages": "js",
        "type": "library",
        "version": "0.50.3"
    }
}
